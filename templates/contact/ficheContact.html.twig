{% extends 'base.html.twig' %}
{% block body %}

<body>
    <div class="row">
            <div class="col-sm-12 col-md-12">
                <div class="card mt-3 container">
                    <h4 class="card-title text-center">{{contact.name}} {{contact.prenom}}</h4>
                    <img style="height: auto; max-width: 200px; display: block;" src="{{contact.avatar}}" class="avatar mx-auto my-3" alt="image avatar">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">{{contact.rue}}</li>
                        <li class="list-group-item">{{contact.cp}}</li>
                        <li class="list-group-item">{{contact.ville}}</li>
                        <li class="list-group-item">{{contact.mail}}</li>
                        <li class="list-group-item text-center">
                        {# {{contact.sexe == 0 ? "Homme" : "Femme"}} #}
                            {% if contact.sexe ==0 %}
                                <span class='badge text-bg-info'>Homme</span>
                            {% else %}
                                <span class='badge text-bg-warning'>Femme</span>
                            {% endif %}  

                        <li class= "list-group-item text-center">
                            <a href="{{path('ficheCategorie', {'id': contact.category.id})}}" class="btn btn-link">{{contact.category.libelle}}</a>
                        </li>
                            <div class="card-body text-center">
                                <a href="{{path('contacts')}}" class="btn btn-success btn-block w-20">Retour Ã  la liste des contacts</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
    </div>
</body>
{% endblock %}